# Keybinds

# Terminal 
super + Return
    kitty	

# Rofi App Launcher
super + space
	sh $HOME/.config/rofi/launchers/type-3/launcher.sh 

# Applications

# Launch Apps
super + f
	firefox
super + e
    nautilus	

# Close App
alt + {_,shift + }q
	bspc node -{c,k}

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# kill window
ctrl + alt + Escape
       xkill

#gnome-system-monitor
ctrl + shift + Escape
    gnome-system-monitor

# Quit/Restart bspwm
ctrl + super + {q,r}
	bspc {quit,wm -r}
	
# Fullscreen or Monocle
super + F11
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
alt + s
    bspc node -t "~"{floating,tiled}

alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Send focused window to another workspace
alt + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'


# focus the node in the given direction
alt + {h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node in the given direction
alt + {Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Expanding windows
alt + control + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
# Shrinking windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}

# Expanding windows (vim)
alt + control + {h,l,k,j}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
# Shrinking windows (vim)
super + alt + {h,l,k,j}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}

# Cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# media
XF86AudioRaiseVolume
	pactl -- set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
	pactl -- set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioRaiseVolume
	pactl -- set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
	pactl -- set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
	pactl -- set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioNext
	playerctl --all-players next
alt +{Num_Lock,KP_Right}
	playerctl --all-players next
XF86AudioPrev
	playerctl --all-players previous
alt +{Num_Lock,KP_Left}
	playerctl --all-players previous
alt +{Num_Lock,KP_Begin}
	playerctl --all-players play-pause
XF86AudioPlay
	playerctl --all-players play-pause
XF86AudioStop
	playerctl --all-players stop


# brightness
XF86MonBrightnessUp
	xbacklight -inc 1
XF86MonBrightnessDown
	xbacklight -dec 1
